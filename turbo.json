{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^dev", "db:migration:up"],
      "cache": false
    },
    "db:schema:fresh": {
      "cache": false
    },
    "db:migration:create": {
      "cache": false
    },
    "db:migration:up": {
      "cache": false
    }
  }
}
